<?xml version="1.0"?>
<xtpl:template xmlns:xtpl="http://rubaxa.org/">
    <xtpl:include src="messagelist/page.xml"/>
    <xtpl:include src="messagelist/portal-headline.xml"/>
    <xtpl:include src="messagelist/portal-menu.xml"/>
    <xtpl:include src="messagelist/left-col.xml"/>
    <xtpl:include src="messagelist/list.xml"/>

    <xtpl:set name="title">Message list</xtpl:set>

    <xtpl:set name="content">
        <xtpl:get name="headline"/>
        <xtpl:get name="headline-menu"/>
        <div class="page minwidth">
            <xtpl:get name="left-col"/>
            <div class="page__content">
                <div class="page__content__wrapper">
                    <xtpl:get name="list"/>
                </div>
            </div>
        </div>
    </xtpl:set>
</xtpl:template>

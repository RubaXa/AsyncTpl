<?xml version="1.0"?>
<fest:template xmlns:fest="http://fest.mail.ru"
               context_name="json">
    <html>
        <head>
        </head>
        <body>
            <table width="800">
                <tbody>
                    <tr>
                        <td width="200">
                            <table bgcolor="#000000"
                                   border="0"
                                   cellpadding="4"
                                   cellspacing="2"
                                   width="100%">
                                <tbody>
                                    <tr><td bgcolor="#ffffff"><h1>Lebowski benchmark</h1></td></tr>
                                </tbody>
                            </table>
                        </td>

                        <fest:for iterate="json.adverts" index="i" value="item">
                            <td valign="top"
                                width="200">
                                <table bgcolor="#000000"
                                       border="0"
                                       cellpadding="2"
                                       cellspacing="2"
                                       width="100%">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <font color="#ffffff"><b><fest:value>item.title</fest:value></b></font>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td bgcolor="#ffffff">
                                                <small>
                                                    <a>
                                                        <fest:attributes>
                                                            <fest:attribute name="href"><fest:value>item.url</fest:value></fest:attribute>
                                                        </fest:attributes>
                                                        <fest:value>item.text</fest:value>
                                                    </a>
                                                </small>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </fest:for>

                    </tr>

                    <tr valign="top">
                        <td width="200">
                            <fest:if test="json.sections">
                                <table cellpadding="3"
                                       width="100%">
                                    <tbody>
                                        <fest:for iterate="json.sections" index="i" value="item">
                                            <tr>
                                                <td>
                                                    <fest:attributes>
                                                        <fest:attribute name="bgcolor">
                                                            <fest:value output="text">i%2 ? '#dddddd' : '#eeeeee'</fest:value>
                                                        </fest:attribute>
                                                    </fest:attributes>

                                                    <font color="#ffffff">
                                                        <b>
                                                            <a>
                                                                <fest:attributes>
                                                                    <fest:attribute name="href">
                                                                        http://lb/section.html?id=<fest:value>item.id</fest:value>
                                                                    </fest:attribute>
                                                                </fest:attributes>

                                                                <fest:value>item.title</fest:value>
                                                            </a>

                                                            <fest:if test="item.rip">
                                                                <font color="#999999">R.I.P.</font>
                                                            </fest:if>
                                                        </b>
                                                    </font>
                                                </td>
                                            </tr>
                                        </fest:for>
                                    </tbody>
                                </table>
                            </fest:if>


                            <p>
                                <b>Users</b>: <fest:value>json.total</fest:value><br />
                                <b>Online</b>: <fest:value>(json.online||[]).length</fest:value><br />
                                <small>
                                    <i>
                                        <fest:for iterate="json.online" index="i" value="item">
                                            <a>
                                                <fest:attributes>
                                                    <fest:attribute name="href">
                                                        http://lb/user.html?id=<fest:value>i</fest:value>
                                                    </fest:attribute>
                                                </fest:attributes>
                                                <fest:value>item.name</fest:value>
                                            </a>
                                            <fest:space/>
                                        </fest:for>
                                    </i>
                                </small>
                            </p>
                        </td>

                        <td colspan="3"
                            width="400">
                            <fest:for iterate="json.news"
                                          index="i" value="item">
                                <b>
                                    <fest:value>item.time+' '+item.title</fest:value>
                                </b>
                                <br />

                                <small>
                                    <fest:value>item.text</fest:value>
                                    <a>
                                        <fest:attributes>
                                            <fest:attribute name="href">
                                                http://lb/news.html?id=<fest:value>item.id</fest:value>
                                            </fest:attribute>
                                        </fest:attributes>
                                        [ read full story ]
                                    </a>
                                </small>
                                <br />
                            </fest:for>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4"
                            align="center">
                            <hr />
                            <small><i>This test based on "Big Lebowski" test by Alexey A. Rybak, 2005.<br />Please send all questions and suggestions to <b>reki@reki.ru</b></i></small>
                        </td>
                    </tr>
                </tbody>
            </table>
        </body>
    </html>
</fest:template>

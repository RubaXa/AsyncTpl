<?xml version="1.0"?>
<xtpl:template xmlns:xtpl="http://rubaxa.org/">
    <html>
        <head>
        </head>
        <body>
            <table width="800">
                <tbody>
                    <tr>
                        <td width="200">
                            <table bgcolor="#000000"
                                   border="0"
                                   cellpadding="4"
                                   cellspacing="2"
                                   width="100%">
                                <tbody>
                                    <tr><td bgcolor="#ffffff"><h1>Lebowski benchmark</h1></td></tr>
                                </tbody>
                            </table>
                        </td>

                        <xtpl:foreach iterate="ctx.adverts" index="i" as="item">
                            <td valign="top"
                                width="200">
                                <table bgcolor="#000000"
                                       border="0"
                                       cellpadding="2"
                                       cellspacing="2"
                                       width="100%">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <font color="#ffffff"><b><xtpl:value>item.title</xtpl:value></b></font>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td bgcolor="#ffffff">
                                                <small>
                                                    <a>
                                                        <xtpl:attributes>
                                                            <xtpl:attribute name="href"><xtpl:value>item.url</xtpl:value></xtpl:attribute>
                                                        </xtpl:attributes>
                                                        <xtpl:value>item.text</xtpl:value>
                                                    </a>
                                                </small>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </xtpl:foreach>

                    </tr>

                    <tr valign="top">
                        <td width="200">
                            <xtpl:if test="ctx.sections">
                                <table cellpadding="3"
                                       width="100%">
                                    <tbody>
                                        <xtpl:foreach iterate="ctx.sections" index="i" as="item">
                                            <tr>
                                                <td>
                                                    <xtpl:attributes>
                                                        <xtpl:attribute name="bgcolor">
                                                            <xtpl:value output="text">i%2 ? '#dddddd' : '#eeeeee'</xtpl:value>
                                                        </xtpl:attribute>
                                                    </xtpl:attributes>

                                                    <font color="#ffffff">
                                                        <b>
                                                            <a>
                                                                <xtpl:attributes>
                                                                    <xtpl:attribute name="href">
                                                                        http://lb/section.html?id=<xtpl:value>item.id</xtpl:value>
                                                                    </xtpl:attribute>
                                                                </xtpl:attributes>

                                                                <xtpl:value>item.title</xtpl:value>
                                                            </a>

                                                            <xtpl:if test="item.rip">
                                                                <font color="#999999">R.I.P.</font>
                                                            </xtpl:if>
                                                        </b>
                                                    </font>
                                                </td>
                                            </tr>
                                        </xtpl:foreach>
                                    </tbody>
                                </table>
                            </xtpl:if>


                            <p>
                                <b>Users</b>: <xtpl:value>ctx.total</xtpl:value><br />
                                <b>Online</b>: <xtpl:value>(ctx.online||[]).length</xtpl:value><br />
                                <small>
                                    <i>
                                        <xtpl:foreach iterate="ctx.online" index="i" as="item">
                                            <a>
                                                <xtpl:attributes>
                                                    <xtpl:attribute name="href">
                                                        http://lb/user.html?id=<xtpl:value>i</xtpl:value>
                                                    </xtpl:attribute>
                                                </xtpl:attributes>
                                                <xtpl:value>item.name</xtpl:value>
                                            </a>
                                            <xtpl:space/>
                                        </xtpl:foreach>
                                    </i>
                                </small>
                            </p>
                        </td>

                        <td colspan="3"
                            width="400">
                            <xtpl:foreach iterate="ctx.news"
                                          index="i" as="item">
                                <b>
                                    <xtpl:value>item.time+' '+item.title</xtpl:value>
                                </b>
                                <br />

                                <small>
                                    <xtpl:value>item.text</xtpl:value>
                                    <a>
                                        <xtpl:attributes>
                                            <xtpl:attribute name="href">
                                                http://lb/news.html?id=<xtpl:value>item.id</xtpl:value>
                                            </xtpl:attribute>
                                        </xtpl:attributes>
                                        [ read full story ]
                                    </a>
                                </small>
                                <br />
                            </xtpl:foreach>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4"
                            align="center">
                            <hr />
                            <small><i>This test based on "Big Lebowski" test by Alexey A. Rybak, 2005.<br />Please send all questions and suggestions to <b>reki@reki.ru</b></i></small>
                        </td>
                    </tr>
                </tbody>
            </table>
        </body>
    </html>
</xtpl:template>
